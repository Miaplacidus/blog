APP="blog"

BUILD_HOST="lifeasalgorithm.com"
BUILD_USER="exmachina"
BUILD_AT="/home/exmachina/app_build"

PRODUCTION_HOSTS="lifeasalgorithm.com"
PRODUCTION_USER="exmachina"
DELIVER_TO="/home/exmachina/app_release"

pre_erlang_clean_compile() {
  status "Installing NPM dependencies"
  __sync_remote "
    [ -f ~/.profile ] && source ~/.profile
    set -e

    cd '$BUILD_AT'
    npm install $SILENCE
  "

  status "Building static files"
  __sync_remote "-wi
    [ -f ~/.profile ] && source ~/.profile
    set -e

    cd '$BUILD_AT'
    mkdir -p priv/static
    npm run deploy $SILENCE
  "

  status "Running phoenix.digest"
  __sync_remote "
    [ -f ~/.profile ] && source ~/.profile
    set -e

    cd '$BUILD_AT'
    APP='$APP' MIX_ENV='$TARGET_MIX_ENV' $MIX_CMD phoenix.digest $SILENCE
  "
}
