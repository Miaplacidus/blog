APP="blog"

BUILD_HOST="lifeasalgorithm.com"
BUILD_USER="exmachina"
BUILD_AT="/home/exmachina/app_build"

PRODUCTION_HOSTS="lifeasalgorithm.com"
PRODUCTION_USER="exmachina"
DELIVER_TO="/home/exmachina/app_release"

pre_erlang_get_and_update_deps() {
  local _prod_secret_path="/home/exmachina/app_config/prod.secret.exs"
  if [ "$TARGET_MIX_ENV" = "prod" ]; then
    __sync_remote "
      ln -sfn '$_prod_secret_path' '$BUILD_AT/config/prod.secret.exs'
    "
  fi
}
